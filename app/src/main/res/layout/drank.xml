            </LinearLayout>

            <Button
                android:id="@+id/bt_custom"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="OK"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    </LinearLayout>