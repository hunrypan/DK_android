            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/syrup4"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:text="Syrup4" />

                <SeekBar
