<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/page3imgv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/screen3"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/page3BT"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/roundbt81"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelBT"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="118dp"
        android:background="@drawable/roundbt15"
        android:alpha="0"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/page3imgv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/paycast_tx"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="90dp"
        android:text="1.25$"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>