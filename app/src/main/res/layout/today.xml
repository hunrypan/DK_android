<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/today_hello"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Today's  Drinking"
        android:textAlignment="center"
        android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/showused"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_info"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/today_dk"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="100L / 120L"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.e.drinkstation.DayDrinkView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="#FAF7F7"
                android:paddingLeft="0dp"
                android:paddingBottom="0dp"
                app:exampleColor="#000"
                app:exampleDimension="20dp"
                app:exampleDrawable="@drawable/glasswater"
                app:exampleString="80%"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagev_cup"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cup" />

            <TextView
                android:id="@+id/today_save"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="SAVE 208"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>