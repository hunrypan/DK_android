    <ImageButton
        android:id="@+id/bt_custom"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/glasswater" />


</LinearLayout>